<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jason.memi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.NavMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Request"
            android:label="@string/title_activity_request"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ConfirmRequest"
            android:label="@string/title_activity_confirm_request"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterReceipient"
            android:label="@string/title_activity_register_receipient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterSender"
            android:label="@string/title_activity_register_sender"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RequestDetails"
            android:label="@string/title_activity_request_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".GeocodeAddressIntentService"
            android:exported="false" />

        <activity
            android:name=".RequestAllDetails"
            android:label="Request Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckOut"
            android:label="@string/title_activity_check_out"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>